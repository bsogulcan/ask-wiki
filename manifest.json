{
  "manifest_version": 3,
  "name": "AskWiki",
  "description": "Learn from Wikipedia",
  "version": "0.4.2",
  "icons": {
    "64": "icons/wikipedia-0.png"
  },
  "background": {
    "service_worker": "background_script.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "./components/wikiBox.js",
        "./components/wikiResult.js",
        "content_script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "64": "icons/wikipedia-0.png"
    },
    "default_title": "AskWiki"
  },
  "permissions": [
    "webRequest",
    "contextMenus",
    "https://*.wikipedia.org/*"
  ]
}
