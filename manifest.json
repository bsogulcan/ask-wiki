{
  "manifest_version": 2,
  "name": "AskWiki",
  "description": "Learn from Wikipedia",
  "version": "0.1.1",
  "icons": {
    "64": "icons/icon.png"
  },
  "background": {
    "scripts": [
      "background_script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "AskWiki"
  },
  "page_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "pageAction/index.html",
    "default_title": "AskWiki"
  },
  "permissions": [
    "webRequest",
    "contextMenus",
    "https://*.wikipedia.org/*"
  ]
}